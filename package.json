{
  "name": "screen-recorder",
  "version": "1.0.0",
  "private": true,
  "description": "A modern screen recording tool with advanced features",
  "main": "build/electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-app-rewired start",
    "clean": "rimraf build/ && rimraf node_modules/.cache",
    "dev": "concurrently -k \"cross-env BROWSER=none npm run start\" \"wait-on tcp:5173 && npm run electron:dev\"",
    "build": "npm run clean && npm run build:react && npm run build:electron",
    "build:react": "react-app-rewired build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "electron:dev": "tsc -p electron/tsconfig.json && electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.screenrecorder.app",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.0",
    "@types/node": "^16.18.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "electron": "^28.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "ffmpeg-static": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.1",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5",
    "whammy": "^0.0.1"
  },
  "devDependencies": {
    "@types/react-router-dom": "^5.3.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "electron-builder": "^24.0.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react-app-rewired": "^2.2.1",
    "rimraf": "^5.0.0",
    "stream-browserify": "^3.0.0",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
